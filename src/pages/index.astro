---
import Layout from '../layouts/Layout.astro';
const pageTitle = "Gabriel Klopzig";
const artist = {
  name: "Gabriel Klopzig",
  bio: "L’électro rencontre la chanson d’auteur introspective. Beats, spleen et refrains qui collent à la peau. Le tout, chanté avec justesse... ou du moins, avec sincérité.",
  tourDates: [
    { date: "2025-09-10", city: "MTL, Canada", venue: "L’Usine Sonore" },
    { date: "2025-09-15", city: "MTL, Canada", venue: "La Scène Lumière" },
    { date: "2025-09-22", city: "MTL, Canada", venue: "Le Hibou Doré" },
  ],
  shopUrl: "https://1vieed-92.myshopify.com"
};
const discography = [
  { title: "Les heures suspendues", year: 2025, cover: "/Cover.jpg", link: "https://open.spotify.com/album/5HDJaBEBjDduFn2IPY76KB?si=RP1Gp060QMq0j-q1fMqdtA" },
  { title: "Bout de chandelle", year: 2025, cover: "prasongsom-punyauppa-path-GLnMLTyQO5g-unsplash.jpg", link: "https://open.spotify.com/album/37SjQnEBFhtSKW1c322xBB?si=ecc3af6ec5d34f5b" },
];
const mediaGallery = [
  { type: "photo", src: "/media/photo1.jpg", alt: "Live at MSG" },
  { type: "video", src: "https://www.youtube.com/embed/dQw4w9WgXcQ", alt: "Music Video" },
];
const socialLinks = [
  { name: "YouTube", url: "https://www.youtube.com/channel/UCr3j4ggAHhLgJN29p1_JKXg" },
  { name: "Spotify", url: "https://open.spotify.com/artist/21QITMcVcc0oQGVrcZniNk?si=E-kpQ9HgTf63X5hqJrKqxQ" },
  { name: "Bandcamp", url: "https://klopzig.bandcamp.com/" },
  { name: "Apple Music", url: "https://music.apple.com/dz/artist/gabriel-klopzig/1815343639" },
  { name: "Amazon Music", url: "https://www.amazon.com/music/player/artists/B0F9BCNS46/gabriel-klopzig" },
];

const press = [
  { quote: "A rising star in electronic music.", source: "Resonance Montreal" },
  { quote: "Gabriel K. livre une performance électrifiante.", source: "Le Pulse" },
];
const testimonials = [
  { name: "Joannie", text: "La musique de Gabriel a changé ma vie!" },
  { name: "Julien", text: "Meilleur show live que j'ai vu." },
  { name: "Jessica", text: "La voix de sa génération" },
];
const featuredMerch = [
  { name: "Vinyl Signé", image: "/IMG_2772.jpg", url: "https://1vieed-92.myshopify.com/products/les-heures-suspendues-vinyl" }
];
const upcomingProjects = [
  { title: "Collab avec DJ Nova", date: "2025-10-01" },
  { title: "Nouveau EP", date: "2026-05-09" },
];
import '../styles/global.css';
---

<Layout pageTitle={pageTitle}>
  <section class="artist-profile">
    <div class="profile-flex">
      <img src="/me.jpeg" alt="Gabriel K" class="profile-photo" />
      <div>
        <h1>{artist.name}</h1>
        <p class="bio">{artist.bio}</p>
      </div>
    </div>
    <h2>Tour Dates</h2>
    <ul class="tour-dates">
      {artist.tourDates.map(date => (
        <li>
          <strong>{date.date}</strong> — {date.city}, <em>{date.venue}</em>
        </li>
      ))}
    </ul>
    <h2>Shop</h2>
    <a class="shop-link" href={artist.shopUrl} target="_blank" rel="noopener">Visit the Official Shop</a>
  </section>

  <section class="discography">
    <h2>Discography</h2>
    <div class="discography-list">
      {discography.map(album => (
        <div class="album">
          <img src={album.cover} alt={album.title} />
          <div>
            <strong>{album.title}</strong> <span>({album.year})</span>
            <br />
            <a href={album.link}>Listen</a>
          </div>
        </div>
      ))}
    </div>
  </section>

  <!-- <section class="media-gallery">
    <h2>Media Gallery</h2>
    <div class="gallery-list">
      {mediaGallery.map(media => (
        media.type === "photo"
          ? <img src={media.src} alt={media.alt} class="gallery-photo" />
          : <iframe src={media.src} title={media.alt} class="gallery-video" frameborder="0" allowfullscreen></iframe>
      ))}
    </div>
  </section> -->

  <section class="social-links">
    <h2>Follow</h2>
    <div>
      {socialLinks.map(link => (
        <a href={link.url} target="_blank" rel="noopener" class="social-link">{link.name}</a>
      ))}
    </div>
  </section>

  <!-- <section class="newsletter">
    <h2>Newsletter Signup</h2>
    <form>
      <input type="email" placeholder="Your email" required />
      <button type="submit">Subscribe</button>
    </form>
  </section> -->

  <section class="press">
    <h2>Press & Reviews</h2>
    <ul>
      {press.map(item => (
        <li>
          <blockquote>"{item.quote}"</blockquote>
          <cite>— {item.source}</cite>
        </li>
      ))}
    </ul>
  </section>

  <section class="contact-booking">
    <h2>Contact / Booking</h2>
    <iframe src="https://docs.google.com/forms/d/e/1FAIpQLSf--iu5boT5mY_UimY1LoxG2dMhPUn8MeoiD6bb_7VNJHLlLw/viewform?embedded=true" width="450" height="800" frameborder="0" marginheight="0" marginwidth="0">Loading…</iframe>
  </section>

  <section class="featured-merch">
    <h2>Featured Merchandise</h2>
    <div class="merch-list">
      {featuredMerch.map(item => (
        <a href={item.url} target="_blank" class="merch-item">
          <img src={item.image} alt={item.name} class="merch-large" />
          <span>{item.name}</span>
        </a>
      ))}
    </div>
  </section>

  <section class="music-player">
    <h2>Listen</h2>
    <iframe data-testid="embed-iframe" style="border-radius:12px" src="https://open.spotify.com/embed/artist/21QITMcVcc0oQGVrcZniNk?utm_source=generator" width="100%" height="352" frameBorder="0" allowfullscreen="" allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture" loading="lazy"></iframe>
  </section>

  <section class="upcoming-projects">
    <h2>Upcoming Projects</h2>
    <ul>
      {upcomingProjects.map(project => (
        <li>
          <strong>{project.title}</strong> <span>({project.date})</span>
        </li>
      ))}
    </ul>
  </section>

  <section class="fan-testimonials">
    <h2>Fan Testimonials</h2>
    <ul>
      {testimonials.map(fan => (
        <li>
          <blockquote>"{fan.text}"</blockquote>
          <cite>— {fan.name}</cite>
        </li>
      ))}
    </ul>
  </section>
</Layout>